{
  "project": {
    "name": "{{PROJECT_NAME}}",
    "type": "unknown",
    "language": "unknown",
    "testFramework": "unknown",
    "buildTool": "unknown",
    "version": "1.0.0",
    "description": "{{PROJECT_DESCRIPTION}}"
  },
  "tdd": {
    "enabled": true,
    "strictMode": false,
    "autoRunTests": true,
    "guardEnabled": true,
    "phaseTimeouts": {
      "red": 1800,
      "green": 3600,
      "refactor": 2700
    }
  },
  "commands": {
    "test": "echo 'Please configure test command'",
    "build": "echo 'Please configure build command'", 
    "lint": "echo 'Please configure lint command'",
    "coverage": "echo 'Please configure coverage command'",
    "clean": "echo 'Please configure clean command'"
  },
  "quality": {
    "minCoverage": 80,
    "maxComplexity": 10,
    "enforceTests": true,
    "codingStandards": "default",
    "requireDocumentation": false
  },
  "hooks": {
    "preCommit": true,
    "postCommit": false,
    "preTest": false,
    "postTest": false,
    "preBuild": false,
    "postBuild": false
  },
  "github": {
    "enabled": false,
    "repository": "",
    "token": "",
    "syncIssues": false,
    "autoCreateIssues": false
  },
  "notifications": {
    "enabled": false,
    "testFailure": true,
    "phaseCompletion": false,
    "qualityGateFailure": true
  },
  "paths": {
    "src": "src",
    "test": "test",
    "docs": "docs",
    "reports": ".claude/reports",
    "logs": ".claude/logs"
  },
  "templates": {
    "testFile": "default",
    "componentFile": "default",
    "documentFile": "default"
  },
  "rules": {
    "maxFileSize": "1MB",
    "maxLinesPerFunction": 50,
    "maxParametersPerFunction": 5,
    "requireTestsForNewCode": true,
    "enforceNamingConventions": true
  },
  "integrations": {
    "ide": {
      "vscode": {
        "enabled": false,
        "extensions": []
      },
      "intellij": {
        "enabled": false,
        "plugins": []
      }
    },
    "ci": {
      "github_actions": {
        "enabled": false,
        "workflow": ".github/workflows/tdd.yml"
      },
      "jenkins": {
        "enabled": false,
        "pipeline": "Jenkinsfile.tdd"
      }
    },
    "monitoring": {
      "enabled": false,
      "endpoint": "",
      "metrics": ["coverage", "test_count", "cycle_time"]
    }
  },
  "created": "{{CREATED_DATE}}",
  "lastModified": "{{LAST_MODIFIED}}"
}