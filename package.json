{
  "name": "claude-tdd-cli",
  "version": "0.2.4",
  "description": "CLI tool for initializing and managing Claude TDD Workflow projects",
  "main": "dist/index.js",
  "bin": {
    "claude-tdd": "./dist/index.js",
    "ctdd": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "powershell -Command \"if (Test-Path src/templates) { Copy-Item -Recurse -Force src/templates dist/ }\"",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "link:local": "npm run build && npm link",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "tdd",
    "test-driven-development",
    "claude-code",
    "workflow",
    "cli",
    "development-tools"
  ],
  "author": "Claude TDD Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "yaml": "^2.3.4",
    "semver": "^7.5.4",
    "ora": "^7.0.1",
    "boxen": "^7.1.1",
    "which": "^4.0.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/fs-extra": "^11.0.4",
    "@types/semver": "^7.5.6",
    "@types/which": "^3.0.3",
    "@types/inquirer": "^9.0.7",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MuziGeek/claude-tdd-cli.git"
  },
  "bugs": {
    "url": "https://github.com/MuziGeek/claude-tdd-cli/issues"
  },
  "homepage": "https://github.com/MuziGeek/claude-tdd-cli#readme"
}