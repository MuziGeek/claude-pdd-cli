{
  "name": "claude-pdd-cli",
  "version": "1.0.1",
  "description": "Claude PDD - Project-Driven Development Platform. Supports PDD, PMD, and TDD methodologies with intelligent CCPM integration for Claude Code",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-pdd": "./dist/index.js",
    "cpdd": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "node scripts/copy-templates.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "tsc --noEmit",
    "test": "echo \"Info: This project focuses on CLI tools and templates - use 'npm run lint' and 'npm run build' for quality checks\"",
    "link:local": "npm run build && npm link",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "pdd",
    "project-driven-development",
    "ccpm",
    "claude-code",
    "project-management",
    "tdd",
    "test-driven-development",
    "bdd",
    "behavior-driven-development",
    "github-integration",
    "workflow",
    "cli",
    "development-tools",
    "spec-driven",
    "dynamic-installation",
    "online-offline",
    "intelligent-setup"
  ],
  "author": "Claude PDD Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "axios": "^1.12.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^12.9.4",
    "ora": "^7.0.1",
    "semver": "^7.5.4",
    "which": "^4.0.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.5",
    "@types/semver": "^7.5.6",
    "@types/which": "^3.0.3",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MuziGeek/claude-pdd-cli.git"
  },
  "bugs": {
    "url": "https://github.com/MuziGeek/claude-pdd-cli/issues"
  },
  "homepage": "https://github.com/MuziGeek/claude-pdd-cli#readme",
  "publishConfig": {
    "access": "public"
  }
}
